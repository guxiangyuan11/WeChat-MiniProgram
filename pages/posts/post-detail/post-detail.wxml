<!--pages/posts/posts-detail/post-detail.wxml-->
<view class="container">
  <image class="head-image" src="{{detailData.imgSrc}}"></image>
  <image catchtap="onMusicTap" class="audio" src="{{isPlayingMusic? '/images/music/music-stop.png': '/images/music/music-start.png'}}"></image> 
  <view class="author-date">
    <image class="avatar" src="{{detailData.avatar}}"></image>
    <text class="author">{{detailData.author}}</text>
    <text class="const-text">发表于</text>
    <text class="date">{{detailData.dataTime}}</text>
  </view>
  <text class="title">{{detailData.title}}</text>
  <view class="tool">
    <view class="circle-img">
      <image wx:if="{{collected}}" catchtap="onColletionTap"  src="/images/icon/collection.png"></image>
       <image wx:else catchtap="onColletionTap" src="/images/icon/collection-anti.png"></image> 
      <image catchtap="onShareTap"  class="share-img" src="/images/icon/share.png"></image>
    </view>
    <view class="horizon"></view>
  </view>
  <text class="detail">{{detailData.detail}}</text>
</view>